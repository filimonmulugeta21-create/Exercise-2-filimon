# Simple Program: Convert Meters to Feet

# Define a function for the conversion
def convert_meters_to_feet(meters):
    feet = meters * 3.28084
    return feet

# Ask the user for input
meters = float(input("Enter distance in meters: "))

# Perform the conversion
feet = convert_meters_to_feet(meters)

# Display the result
print(f"{meters} meters is equal to {feet:.2f} feet.")

# Assignment: Tax Calculator

# Function to calculate tax and net income
def calculate_tax(income):
    if income <= 2000:
        tax_rate = 0
    elif income <= 4000:
        tax_rate = 0.15
    elif income <= 7000:
        tax_rate = 0.20
    elif income <= 10000:
        tax_rate = 0.25
    elif income <= 14000:
        tax_rate = 0.30
    else:  # Over 14000
        tax_rate = 0.35

    tax_owed = income * tax_rate
    net_income = income - tax_owed
    return tax_owed, net_income

# Ask the user for income
income = float(input("Enter your income: "))

# Calculate tax and net income
tax, net = calculate_tax(income)

# Display the results
print(f"Total tax owed: ${tax:.2f}")
print(f"Net income after tax: ${net:.2f}")
